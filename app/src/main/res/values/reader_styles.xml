<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PDFReaderTheme" parent="@style/ReadTheme">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:actionBarStyle">@style/ActionBarFullScreen</item>
    </style>
    <style name="ActionBarFullScreen" parent="@style/MyActionBar">
        <item name="android:background">@drawable/bg_top_actionbar</item>
    </style>
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/apptheme_color</item>
        <item name="android:backgroundStacked">@color/apptheme_color</item>
    </style>
</resources>