<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="custom_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="Container">
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">@dimen/padding_step2</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/base_background_color</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">@dimen/padding_step1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbarHeight</item>
        <item name="android:background">@color/basebar_color</item>
    </style>

    <style name="smallitem">
        <item name="android:paddingLeft">@dimen/padding_step2</item>
        <item name="android:paddingRight">@dimen/padding_step2</item>
        <item name="android:paddingBottom">@dimen/padding_step2</item>
        <item name="android:paddingTop">@dimen/padding_step2</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="card">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/padding_step2</item>
        <item name="android:paddingRight">@dimen/padding_step2</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="tableitem">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/padding_step1</item>
        <item name="android:paddingRight">@dimen/padding_step2</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/tableHeight</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/me_tableitem2_selecter</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="tableitemnoline">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/padding_step1</item>
        <item name="android:paddingRight">@dimen/padding_step2</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/tableHeight</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/me_tableitem_selecter</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dip</item>
        <item name="android:background">@color/line_color</item>
    </style>

    <style name="titletext">
        <item name="android:textSize">@dimen/nameTextSize</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/padding_step_0</item>
        <item name="android:textColor">@color/title_text_color</item>
    </style>

    <style name="cardtext">
        <item name="android:textSize">@dimen/card_text_info_size</item>
        <item name="android:textColor">@color/apptheme_third_color</item>
    </style>

    <style name="bodytext">
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:textColor">@color/apptheme_third_color</item>
    </style>

    <style name="arrow">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:src">@drawable/ic_me_right</item>
    </style>

    <style name="Animations" />

    <style name="Animations.PopDownMenu" />
    <style name="Animations.PopDownMenu.Reflect">
        <item name="@android:windowEnterAnimation">@anim/pump_top</item>
        <item name="@android:windowExitAnimation">@anim/disappear</item>
    </style>

    <style name="Animations.PopUpMenu" />
    <style name="Animations.PopUpMenu.Reflect">
        <item name="@android:windowEnterAnimation">@anim/pump_bottom</item>
        <item name="@android:windowExitAnimation">@anim/disappear</item>
    </style>
</resources>