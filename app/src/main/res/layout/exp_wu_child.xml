<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:id="@id/exp_section_ripple_wrapper_click"
    android:layout_height="@dimen/tableHeight"
    android:layout_margin="0dp"
    android:padding="0dp">

    <RelativeLayout
        android:id="@id/exp_section_adjustment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:clickable="false"
        android:focusable="false"
        android:padding="0dp">
        <TextView
            style="@style/bodytext"
            android:id="@id/exp_section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:gravity="left"
            android:lines="1" />

        <TextView
            android:id="@+id/exp_section_message"
            android:textColor="@color/apptheme_second_color"
            android:textSize="@dimen/card_text_info_size"
            android:layout_toLeftOf="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="left"
            android:lines="1" />

        <ImageView
            android:id="@+id/arrow"
            style="@style/arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/default_spacing_major"
            android:scaleType="fitCenter" />
    </RelativeLayout>
    <View style="@style/line"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>